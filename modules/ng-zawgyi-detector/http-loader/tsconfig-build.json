{
  "extends": "../tsconfig-build.json",

  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "../",
    "outDir": "../../../dist/packages/ng-zawgyi-detector",

    "paths": {
      "@myanmartools/ng-zawgyi-detector": [ "../../../dist/packages/ng-zawgyi-detector" ]
    },
  },
  "files": [
    "public_api.ts"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "fullTemplateTypeCheck": true,
    "flatModuleOutFile": "http-loader.js",
    "flatModuleId": "@myanmartools/ng-zawgyi-detector/http-loader"
  }
}
